<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/homepage_titilebar_background">
    <TextView
            android:id="@+id/exhibition_titlebar_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    <ImageView
            android:id="@+id/exhibition_titlebar_btn_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/telephone_btn"/>
    <ImageView
            android:id="@+id/exhibition_titlebar_signup"
            android:background="@drawable/signup_btn"
            android:layout_toLeftOf="@id/exhibition_titlebar_btn_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</RelativeLayout>